{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "default capabilities",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-dir", 
    "fs:allow-create",
    "dialog:allow-save",
    "dialog:allow-open", 
    "fs:allow-write-file"
  ],
  "scope": {
    "allow": [
      "$DESKTOP/**",
      "$DOCUMENT/**", 
      "$HOME/**",
      "**"
    ]
  }
}